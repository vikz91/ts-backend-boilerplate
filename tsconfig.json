{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@interfaces/*":["src/interfaces/*"],
      "@models/*":["src/models/*"],
      "@plugins/*":["src/plugins/*"],
      "@utils/*":["src/utils/*"],
      "*": [
          "node_modules/*"                
      ]
    },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "dist"
  ]
}